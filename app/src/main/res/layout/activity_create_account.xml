<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    tools:context=".activity.CreateAccountActivity"
    android:isScrollContainer="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/profileImg"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/defaultimage"
                android:layout_gravity="center"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:gravity="center">
                <RadioButton
                    android:id="@+id/passengerButtonInRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/passengers_in_register"
                    android:checked="true"
                    android:layout_marginEnd="10dp"/>
                <RadioButton
                    android:id="@+id/driverButtonInRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/driver_in_register"/>
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/usernameText"
                style="@android:style/Widget.Holo.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:hint="@string/hintText"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="false"
                android:textSize="12sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/passwordText"
                style="@android:style/Widget.Holo.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:hint="@string/passwordHint"
                android:inputType="textPassword"
                android:singleLine="false"
                android:textSize="12sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phoneNumber"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_prefix"
                    android:textColor="@color/black"
                    android:layout_marginEnd="5dp"/>
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/phoneText"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:focusable="true"
                    android:background="@drawable/edit_box_style"
                    android:inputType="phone"
                    android:singleLine="false"
                    android:textSize="12sp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/emailText"
                style="@android:style/Widget.Holo.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:hint="@string/emailHint"
                android:inputType="textEmailAddress"
                android:singleLine="false"
                android:textSize="12sp" />
            <Button
                android:id="@+id/sendSMSButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/smsButtonText"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/verificationCodeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/smsHint"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="12sp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/counterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/registerButton"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>